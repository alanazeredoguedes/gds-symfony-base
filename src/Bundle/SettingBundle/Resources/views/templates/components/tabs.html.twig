{% if tabs is not empty %}
<div class="col-md-12">
    <div class="nav-tabs-custom">

        <ul class="nav nav-tabs" role="tablist">

            {% for index, tab in tabs %}
                <li {% if index == 0 %}class="active"{% endif %}>
                    <a href="#tab_{{ index }}" class="changer-tab" aria-controls="tab_{{ index }}" data-toggle="tab" id="btn-tab_{{ index }}">
                        <i class="fas fa-exclamation-circle has-errors hide" aria-hidden="true"></i>
                        {% if tab.name %}
                            {{ tab.name }}
                        {% else %}
                            Tab {{ index }}
                        {% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>


        <div class="tab-content">

            {% for index, tab in tabs %}
                <div class="tab-pane fade {% if index == 0 %}in active{% endif %}" id="tab_{{ index }}">
                    <div class="box-body  container-fluid">
                        <div class="sonata-ba-collapsed-fields">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="box box-primary">
                                        {% if  tab.description  %}
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ tab.description }}
                                                </h4>
                                            </div>
                                        {% endif %}
                                        <div class="box-body">
                                            <div class="sonata-ba-collapsed-fields">
                                                {{ '{% block tab_' ~ index ~ ' %}'}}



                                                {{ '{% endblock %}' }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>
</div>
{% endif %}